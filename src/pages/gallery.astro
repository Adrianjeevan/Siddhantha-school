---
import PageBanner from "../components/PageBanner.astro";
import Section from "../components/Section.astro";
import SectionTitle from "../components/SectionTitle.astro";
import Layout from "../layouts/Layout.astro";

const gallery = [
  {
    image: [
      {
        
        source: "/images/police.png",
      },
      {
        
        source: "/images/staffs.png",
      },
      {
        
        source: "/images/police.png",
      },
      {
        
        source: "/images/staffs.png",
      },
      {
        
        source: "/images/police.png",
      },
      {
        
        source: "/images/staffs.png",
      },
      {
        
        source: "/images/police.png",
      },
      {
        
        source: "/images/staffs.png",
      },
      {
        
        source: "/images/police.png",
      },
      {
        
        source: "/images/staffs.png",
      }
      
    ],
  },
];
---

<Layout title="Gallery">
  <PageBanner title="Gallery" image="/images/brushed/Banner-img-003.png"/>
  <Section style="" />
    <div class="container" style="position: relative;">
      <!-- <SectionTitle title="Our Gallery" /> -->

      <div class="gallery-slider">
        {
          gallery.map((items) => {
            return (
              <div class="gallery-slide">
                <div class="wrapper">
                  {items.image.map((photos) => {
                    return (
                    <div>
                      <a href={photos.source} data-fancybox="gallery" class="slide-link">
                        <img
                          src={photos.source}
                          alt="Siddhantha Intellectual school - Gallery"
                        />
                      </a>
                      </div>
                    );
                  })}
                </div>
               
              </div>
            );
          })
        }
        {
          gallery.map((items) => {
            return (
              <div class="gallery-slide">
                <div class="wrapper">
                  {items.image.map((photos) => {
                    return (
                    <div>
                      <a href={photos.source} data-fancybox="gallery" class="slide-link">
                        <img
                          src={photos.source}
                          alt="Siddhantha Intellectual school - Gallery"
                        />
                      </a>
                      </div>  
                    );
                  })}
                </div>
               
              </div>
            );
          })
        }
      </div>



      <div class="gallery-controls">
        <div class="card-button prev">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="46"
            height="46"
            viewBox="0 0 46 46"
            fill="none"
          >
            <path
              id="round"
              d="M23.0001 42.1668C12.4146 42.1668 3.83342 33.5856 3.83342 23.0002C3.83342 12.4147 12.4146 3.8335 23.0001 3.8335C33.5855 3.8335 42.1667 12.4147 42.1667 23.0002C42.1667 33.5856 33.5855 42.1668 23.0001 42.1668Z"
              stroke="#112121"
              stroke-width="3.4375"
              stroke-miterlimit="10"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              id="arrow"
              d="M25.415 29.7656L18.6684 22.9997L25.415 16.2339"
              stroke="#112121"
              stroke-width="3.4375"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </div>
        <div class="card-button next">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="46"
            height="46"
            viewBox="0 0 46 46"
            fill="none"
          >
            <path
              id="round"
              d="M22.9999 42.1668C33.5854 42.1668 42.1666 33.5856 42.1666 23.0002C42.1666 12.4147 33.5854 3.8335 22.9999 3.8335C12.4145 3.8335 3.83325 12.4147 3.83325 23.0002C3.83325 33.5856 12.4145 42.1668 22.9999 42.1668Z"
              stroke="#112121"
              stroke-width="3.4375"
              stroke-miterlimit="10"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
            <path
              id="arrow"
              d="M20.585 29.7656L27.3316 22.9997L20.585 16.2339"
              stroke="#112121"
              stroke-width="3.4375"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </div>
      </div>
    </div>


  </Section>

  <style lang="scss">
    

    .gallery-controls {
      display: flex;
      position: absolute;
      padding: 1rem;
      width: 100%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      justify-content: space-between;
     
      gap: 1rem;

      .g-button {
        border: solid 1px black;
        padding: 0.2rem 0.6rem;
        cursor: pointer;
      }

      svg{
        #round, #arrow {
          stroke:var(--blue);
        }
      }
    }

    .wrapper {
      display: grid;
      grid-template-columns: repeat(4 , 200px);
     
      gap: 3rem ;
      place-content: center;
      place-items: center;
      margin-bottom: 5rem;


      @media screen and (max-width:991px) {
        grid-template-columns: repeat(2, 1fr) !important;
        gap: 1rem ;
      }
      
      >div{
        display: flex;
        width: 100%;
        height: 100%;
        text-align: center;
       
      }
      

      img {
        width: 100%;
        height: 100%;
        margin: 0 auto; 
        object-fit: cover;
      }
    }
  </style>
</Layout>
