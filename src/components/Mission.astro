    }



    .slide {
      
     
   

      &:hover {
      

        .gif {
           
            display: block !important;
            animation: vision 0.8s forwards ;
            
        }
       
        .gif2 {
            display: block !important;
            animation: mission 0.8s forwards ;
            
        }
       
        .gif3 {
            display: block !important;
            animation: philosophy 0.8s forwards;
            
        }
       

        .img{
            opacity: 0 !important;
        }
        .img2{
           opacity: 0 !important;
        }
        .img3{
           opacity: 0 !important;
        }
      }

      .wrapper{
        position: relative;
        width: 95%;
        height: 430px;
        border: solid 1px maroon !important ;
        border-radius: 20px;
        overflow: hidden;
        p{
            padding: 1rem;
        }
      
      }
      



      

      .gif {
        width: 100%;
        height: 100%;
        position: absolute;
        z-index: 1;
        right: 0;
        top: 0; 
        
        display: none;
        
      
              
        
      }

