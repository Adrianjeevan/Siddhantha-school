---
const { title , content , image } = Astro.props
---

<div class="left-image">
    <div class="row">
        <div class="col-lg-4 left-img">
            <img src={image} alt="sidhhantha intellectual school" class="" >
        </div>
        <div class="col-lg-5 cont">
            <h5>{title}</h5>
            <p>{content}</p>
        </div>
    </div>
</div>

<style lang="scss">
    .left-image{
        padding-bottom: 4rem;
        .row{
            justify-content: space-around;
            // gap: 3rem;
            align-items: center;
            >:nth-child(1){
                overflow: hidden;
                border: solid 10px var(--blue);
                height: 500px;
                padding: 0;
            }
            img{
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            h5{
                font-size: clamp(24px, 4vw, 30px);
                color: var(--dark-blue);
                margin-bottom: 1rem;
            }
        }
    }
</style>