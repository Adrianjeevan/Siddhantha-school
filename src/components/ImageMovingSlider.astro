<div class="pt-4">
  <Button
    title="View more"
    variant="normal"
    classes="text-center"
    link="/gallery"
  />
</div>

<style lang="scss">
  .moving-images {
    position: relative;
    display: inline-block;
    width: 100%;
    gap: 20px;
    overflow: hidden;
    white-space: nowrap;
  }

  @keyframes slide {
    from {
      transform: translateX(0);
    }

    to {
      transform: translateX(-100%);
    }
  }

  .image-container {
    height: 600px;
    //   width: 100%;
    //   overflow: hidden;

    // display: flex;

    gap: 10px;
    animation: slide 30s infinite linear; 

    img{
      border-radius: 25px;
    }

    @media screen and (max-width: 991px) {
      height: 344px;
    }

    > :nth-child(1) {
      height: 100%;
      width: 300px;
      object-fit: cover;
      // object-fit: cover;
    }

    .layout2 {
      width: 800px;
      justify-content: center;

      @media screen and (max-width: 500px) {
        width: 400px;
      }
      > :nth-child(1) {
        width: 100%;
        height: 100%;
        gap: 10px;
        > :nth-child(1) {
          height: 50% !important;
          width: 100%;
          // aspect-ratio: ;

          object-fit: cover;
        }

        > :nth-child(2) {
          gap: 10px !important;
          display: flex;
          overflow: hidden;
          width: 100%;
          height: 50% !important;
          img {
            width: 50%;
            height: 100% !important;
            object-fit: cover;
          }
        }
      }
    }

    > :nth-child(3) {
      height: 100%;
      width: 300px;
      object-fit: cover;
    }
    > :nth-child(4) {
      height: 100%;
      width: 300px;
      object-fit: cover;
    }
    > :nth-child(5) {
      height: 100%;
      width: 300px;
      object-fit: cover;
    }

    > :nth-child(7) {
      height: 100%;
      width: 300px;
      object-fit: cover;
    }
  }

  .image {
    //   width: 100%; /* Adjust the width of your images */
    height: 450px;
    object-fit: contain; /* Maintain aspect ratio */
    //   margin-right: 10px; /* Adjust spacing between images */
    //   margin-right: 10px; /* Adjust spacing between images */
    transition: all 0.3s ease-in-out;

    // &:hover {
    //   transform: scale(1.04);
    // }
  }
</style>
