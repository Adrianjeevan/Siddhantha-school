---
const { title, subtitle, classes, style, substyle, spans, spancolor } = Astro.props;
---

<div class:list={["section-title", classes]} style={style}>
  <h5
    class=""
    style={subtitle ? "padding-bottom:1rem;" : "padding-bottom:0rem;"}
  >
    {title} <span style="spancolor">{spans}</span>
   
  </h5>
  <p style={substyle}>{subtitle}</p>
</div>

<style lang="scss">

  .section-title{
    padding-bottom:3.5rem;
  }
 
  h5 {
    color: var(--d-9-d-9-d-9, #134668);
    // text-align: center;
    font-family: "New York";
    font-size: 36px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;

    span{
      color: rgb(217, 241, 252);
    // text-align: center;
    font-family: "New York";
    font-size: 36px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    }
  }

  p {
    font-size: 16px;
    color: rgb(127, 132, 132);
    width: 60%;
    margin: 0 auto;

    @media screen and (max-width: 500px) {
      // text-align: justify;
      width: 100%;
    }
  }
</style>
