---
import Section from "./Section.astro";
import SectionTitle from "./SectionTitle.astro";
---

<Section>
  <div class="container">
    <div class="journey d-flex flex-column">
      <div class="row justify-content-between">
        <div class="col-lg-7">
          <div class="journey-one stu-rev">
            <div class="one-slide">
              <div class="video-wrapper video-container">
                <img class="imgs" src="/images/videos/staff1.png" alt="" />
                <video
                  width="100%"
                  height="400px"
                  class="bigvideo"
                  playsinline
                  preload="none"
                  controls
                >
                  <source src="/images/videos/kid1.mp4" type="video/mp4" />
                  Your browser does not support the video tag.
                </video>
              </div>
            </div>
            <div class="one-slide">
              <div class="video-wrapper video-container">
                <img src="/images/videos/staff1.png" class="imgs" alt="" />
                <video
                  width="100%"
                  height="100%"
                  class="bigvideo"
                  playsinline
                  preload="none"
                  controls
                >
                  <source src="/images/videos/kid2.mp4" type="video/mp4" />
                  Your browser does not support the video tag.
                </video>
              </div>
            </div>
          </div>

          <div class="controls-container-one">
            <div class="control-button prev">
              <img src="/images/left.jpg" alt="" style="max-width:30px" />
            </div>
            <div class="control-button next">
              <img src="/images/right.jpg" alt="" style="max-width:30px" />
            </div>
          </div>
        </div>

        <div class="col-lg-4">
          <div class="right-titles">
            <SectionTitle
              title="Inspiring Journeys:Students Experiences Unveiled"
              classes="text-left"
              style="text-align:left; padding-bottom:2rem;"
            />
          </div>
        </div>
      </div>

      <div class="row justify-content-between edu">
        <div class="col-lg-4">
          <div class="left-titles">
            <SectionTitle
              title="In the Words of Educators"
              classes="text-left"
              style="text-align:left; padding-bottom:2rem;"
            />
          </div>
        </div>
        <div class="col-lg-7">
          <div class="educator par-rev">
            <div class="one-slide">
              <div class="video-wrapper video-container">
                <img class="imgs" src="/images/videos/staff1.png" alt="" />
                <video
                  width="100%"
                  height="400px"
                  class="bigvideo"
                  playsinline
                  preload="none"
                  controls
                >
                  <source src="/images/videos/staff1.mp4" type="video/mp4" />
                  Your browser does not support the video tag.
                </video>
              </div>
            </div>
            <div class="one-slide">
              <div class="video-wrapper video-container">
                <img src="/images/videos/staff1.png" class="imgs" alt="" />
                <video
                  width="100%"
                  height="100%"
                  class="bigvideo"
                  playsinline
                  preload="none"
                  controls
                >
                  <source src="/images/videos/staff2.mp4" type="video/mp4" />
                  Your browser does not support the video tag.
                </video>
              </div>
            </div>
          </div>

          <div class="educator-controls">
            <div class="control-button prev">
              <img src="/images/left.jpg" alt="" style="max-width:30px" />
            </div>
            <div class="control-button next">
              <img src="/images/right.jpg" alt="" style="max-width:30px" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Section>

<style lang="scss">
  .journey {
    gap: 7rem;

    @media screen and (max-width: 991px) {
      gap: 3rem;
    }

    > :nth-child(1) {
      align-items: center;

      @media screen and (max-width: 991px) {
        flex-direction: column-reverse;
      }
      > :nth-child(1) {
        position: relative;
      }
      > :nth-child(2) {
        position: relative;
      }
    }
    > :nth-child(2) {
      align-items: center;

      @media screen and (max-width: 991px) {
        flex-direction: column-reverse;
      }
      > :nth-child(1) {
        position: relative;
      }
      > :nth-child(2) {
        position: relative;
      }
    }
  }

  .journey-one {
    width: 90%;

    // overflow: hidden;
    // background-color: red;

    .one-slide {
      div {
        width: 80%;
        height: 400px;
        position: relative;
        border: solid 2px var(--dark-blue);
        margin: 0 auto;
        border-radius: 15px;

        overflow: hidden;
        box-shadow: rgba(17, 17, 26, 0.1) 0px 0px 16px;

        @media screen and (max-width: 500px) {
          width: 100%;
          height: 200px;
        }
      }
    }
    img {
      width: 100%;
      height: 100%;
      margin: 0 auto !important;
      position: absolute;
      top: 0;
      left: 0;
      z-index: 2 !important;
    }

    video {
      border-radius: 15px;
      display: flex;
      object-fit: fill;
      //   display: block;
      height: 100% !important ;
    }
  }

  .controls-container-one {
    @media screen and (min-width: 500px) {
      display: flex;
      position: absolute;
      top: 55%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      padding: 0 1rem;
      // height: 100px;
      justify-content: space-between;
    }

    justify-content: center;
    display: flex;
    gap: 2rem;
    padding: 2rem 0;

    // z-index: 1;
  }

  .educator {
    width: 90%;

    overflow: hidden;
    // background-color: red;

    .one-slide {
      div {
        width: 80%;
        height: 400px;
        border: solid 2px var(--dark-blue);
        margin: 0 auto;
        border-radius: 15px;
        overflow: hidden;
        position: relative;

        @media screen and (max-width: 500px) {
          width: 100%;
          height: 200px;
        }
      }
    }
    img {
      width: 100%;
      height: 100%;
      margin: 0 auto !important;
      position: absolute;
      top: 0;
      left: 0;
      z-index: 2 !important;
    }

    video {
      border-radius: 15px;
      display: flex;
      object-fit: fill;
      //   display: block;
      height: 100% !important ;
    }
  }

  .educator-controls {
    @media screen and (min-width: 500px) {
      display: flex;
      position: absolute;
      top: 55%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      padding: 0 1rem;
      // height: 100px;
      justify-content: space-between;
    }

    justify-content: center;
    display: flex;
    gap: 2rem;
    padding: 2rem 0;
  }
</style>
