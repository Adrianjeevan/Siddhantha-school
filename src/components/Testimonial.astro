<style lang="scss">
  

  .testimonials {
    // max-width: 800px;
    // height: 400px;
    margin: 4rem 0;

    > :nth-child(1) {
      .wrapper {
      }
    }
    .slide {
      .wrapper {
        position: relative;
        width: 90%;
        background-color: aliceblue;
        padding: 2rem;
        margin: 0 auto;
        border-radius: 10px;

        height: 100%;
        display: block !important;
        transition: all 0.5s ease;
        box-shadow: rgba(0, 0, 0, 0.09) 0px 3px 12px;
        

        &:hover {
          background-color: rgba(9, 142, 186, 0.201);
          box-shadow: rgba(137, 215, 243, 0.655) 0px 25px 20px -20px;
        }

        .overlay {
          position: absolute;
          top: -3rem;
          width: 70px;
          height: 70px;
          border-radius: 70px;
          background-color: red;
          box-shadow: rgba(17, 17, 26, 0.1) 0px 4px 16px, rgba(17, 17, 26, 0.05) 0px 8px 32px;
        }

        .content {
          height: 100%;
          width: 100%;
          display: flex;
          flex-direction: column;
          // justify-content: center;
