<style lang="scss">
  .banner-title {
   
    font-size: clamp(16px, 4vw, 20px);
    line-height: 1.2;
    font-family: "New York";
    font-weight: 700;
   
    color: rgb(198, 196, 196); 

    span {
      color: white;
      font-size: clamp(35px, 4vw, 40px);
      
    }
  }
  .hero {
    height: 85vh;
    margin-bottom: 2rem;
    // background-color: orange;
    position: relative;
    margin-top:var(--header-height);
    // padding: 4rem 0 0 0;

    @media screen and (max-width: 991px) {
      height: auto;
      padding: 0 ;
    }

    .hero-slider {
      width: 100%;
      height: 85vh;
    }

    
    .hero-slide {
      width: 100%;
      height: 85vh;
      position: relative;

      .row-wrapper{
        height: 60vh;
        width: 100%;
        padding-top: 4rem;

        display: flex;
        justify-content: center;
        align-items: center;
       
      }

      


      .second-img {
        // display: none;
        width: 100%;
        height: 100% !important;
        filter:brightness(80%) ;
        
        position: absolute;
        z-index: -1;
        object-fit: cover;
        top: 0;
        left: 0;

        @media screen and (max-width:1080px) {
        
        }
        // filter: brightness(50%);
      }

      .row {
        justify-content: space-around;
        height: 100%;
        width: 100%;
        // padding-top: 10rem;
       
     

        > :nth-child(2) {
          // background-color: red;
          display: flex;
          justify-content: center;
          align-items: center;
          overflow: hidden;
          height: 100%;
          @media screen and (max-width: 1080px) {
              display: none;
            
            }

          .second-img {
            display: none;
            object-fit: contain;

            @media screen and (max-width: 1080px) {
              display: block;
              width: 100% !important;
              height: 100%;
            }
          }
        }
      }
    }

    .contents {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      height: 100%;

      // align-items: flex-start;
      justify-content: center;
      h3{
        
      }
    }
  }

  .square {
    position: relative;
    // margin: 0 10px;
    width: 70%;
    height: 70%;
    display: flex;
    justify-content: center;
    align-items: center;

    @media screen and (max-width: 1080px) {
      display: none;
    }

    // @media screen and max {

    // }
  }

  .square span:nth-child(1) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 2;
    height: 100%;
    border: 2px solid black;
    border-radius: 50%;
    // border-radius: 32% 58% 69% 43% / 48% 32% 59% 55%;
    overflow: hidden;
    transition: 0.5s;

    img {
      width: 100%;

      height: 100%;
    }
    // animation: animate 5s linear infinite ;
  }

  .linkedin:hover span:nth-child(1) {
    border: none;
    background: #f07e6e;
  }

  .twitter:hover span:nth-child(1) {
    border: none;
    background: #84cdfa;
  }

  .github:hover span:nth-child(1) {
    border: none;
    background: #5ad1cd;
  }

  .square span:nth-child(2) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    // border: 2px solid black;
    border-radius: 38% 62% 63% 37% / 41% 44% 56% 59%;
    transition: 0.5s;
    z-index: -2;
    animation: animate 4s linear infinite;
    background: var(--dark-blue);
  }

  .linkedin:hover span:nth-child(2) {
    border: none;
    background: #f0bbb4;
  }

  .twitter:hover span:nth-child(2) {
    border: none;
    background: #84cdfa;
  }

  .github:hover span:nth-child(2) {
    border: none;
    background: #5ad1cd;
  }

  .square span:nth-child(3) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    // border: 2px solid black;
    border-radius: 31% 45% 74% 35% / 38% 56% 51% 87%;
    transition: 0.5s;
    animation: animate2 10s linear infinite;
    background: var(--blue);
  }

  .linkedin:hover span:nth-child(3) {
    border: none;
    background: #f07e6e;
  }

  .twitter:hover span:nth-child(3) {
    border: none;
    background: #84cdfa;
  }

  .github:hover span:nth-child(3) {
    border: none;
    background: #5ad1cd;
  }

  .content {
    position: relative;
    padding: 40px 60px;
    // color: black;
    text-align: center;
    transition: 0.5s;
    z-index: 1000;
  }

  .content a {
    position: relative;
    display: inline-block;
    margin-top: 10px;
    border: 2px solid #fff;
    padding: 6px 18px;
    text-decoration: none;
    color: #fff;
    font-weight: 600;
    border-radius: 73% 27% 44% 56% / 49% 44% 56% 51%;
  }

  .content a:hover {
    background: white;
    color: #333;
  }

  @keyframes animate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes animate2 {
    0% {
      transform: rotate(360deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }
</style>
