---
import Section from "./Section.astro";
---

<Section>
  <div class="container">
    <div class="home-highlight">
      <div class="highlight-slide">
       <div>
        <div>
          <img src="/images/graduated.png" alt=""  />
        </div>
        <div>
          <h5>
            <span
                class="purecounter"
                data-purecounter-start="0"
                data-purecounter-end="500">0</span
              >
              <span class="clr-ble">+</span><br> 
           </h5>
          <p class="para">Students</p>
        </div>
       </div>
      </div>
      <div class="highlight-slide">
        <div>
          <div>
            <img src="/images/001/Awards.png" alt="" />
          </div>
          <div>
            <h5>
              <span
                  class="purecounter"
                  data-purecounter-start="0"
                  data-purecounter-end="10">0</span
                >
                <span class="clr-ble">+</span><br> 
             </h5>
            <p class="para">Best Awards Won</p>
          </div>
        </div>
      </div>
      <div class="highlight-slide">
       <div>
        <div>
          <img src="/images/001/Teachers.png" alt="" />
        </div>
        <div>
          <h5>
            <span
                class="purecounter"
                data-purecounter-start="0"
                data-purecounter-end="20">0</span
              >
              <span class="clr-ble">+</span><br> 
           </h5>
          <p class="para">Expert Faculty</p>
        </div>
       </div>
      </div>
      <div class="highlight-slide">
       <div>
        <div>
          <img src="/images/001/Students-enrolled.png" alt="" />
        </div>
        <div>
          <h5>
            <span
                class="purecounter"
                data-purecounter-start="0"
                data-purecounter-end="1000">0</span
              >
              <span class="clr-ble">+</span><br> 
           </h5>
          <p class="para">Students Enrolled</p>
        </div>
       </div>
      </div>
    </div>
  </div>
</Section>

<style lang="scss">
  .home-highlight {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    place-content: center;
    place-items: center;
    @media screen and (max-width:991px) {
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
    }
    @media screen and (max-width:500px) {
        grid-template-columns: repeat(1, 1fr);
        gap: 2rem;
    }

    .para {
      text-align: center;
      margin:0;
    }

    h5 {
     span{
      //   text-align: center;
      color: #29749e;
      font-family: "New york";
      font-size: 40px;
      font-style: normal;
      font-weight: 700 !important ;
      line-height: 80px; /* 137.931% */
      letter-spacing: 0.2px;
      margin:0; 
     }

      @media screen and (max-width:1080px) {
        font-size: 38px !important;
      }
    }

    img {
      max-width: 59px;
    }

    .highlight-slide {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 2rem;
      width: 100%;

      >:nth-child(1){
        display: flex;
        align-items: center;
        gap: 2rem;
      }
    }
  }
</style>
